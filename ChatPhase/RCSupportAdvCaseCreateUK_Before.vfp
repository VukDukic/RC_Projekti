                if($(this).prop("readonly")){
                    var level1Value=$("[id$=assistancelabel] option:selected").val();
                    var level2Value=$("[id$=assistancelabel2] option:selected").val();
                    var level3Value=$("[id$=assistancelabel3] option:selected").val();
