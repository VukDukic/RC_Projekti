            $('#Severity').hide();
            $("#fade").fadeOut("fast");
            $("#fade").remove();
        }
        function showCaseUpdateDetail() {
            $('#caseUpdate').show();
            $('body').append('<div id="fade"></div>'); //Add the fade layer to bottom of the body tag.
            $('#fade').css({'filter' : 'alpha(opacity=80)'}).fadeIn(); //Fade in the fade layer 
        } 
        function hideCaseUpdateDetail(){
            $('#caseUpdate').hide();
            $("#fade").fadeOut("fast");
