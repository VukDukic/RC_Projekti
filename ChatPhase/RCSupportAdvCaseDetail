                                function hideCommentDiv() {
                                    if(document.getElementById('{!$Component.page1:LC_Form:form1:newDesc}') != null) {
                                        document.getElementById('{!$Component.page1:LC_Form:form1:newDesc}').value = '';
                                    }
                                    $( "#caseComment").hide();
                                    //alert(commentSize);
                                    if(commentSize != 0) {
                                        $('.add-comment').addClass('comment');
                                    } 
                                }   
                            </script>
